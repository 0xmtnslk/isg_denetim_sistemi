[Unit]
Description=ISG Denetim Frontend Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/ubuntu/isg_denetim_sistemi/frontend
ExecStart=/usr/bin/npx serve -s dist -l 5173
Restart=on-failure
RestartSec=10
StandardOutput=append:/var/log/isg-frontend.log
StandardError=append:/var/log/isg-frontend-error.log

[Install]
WantedBy=multi-user.target
