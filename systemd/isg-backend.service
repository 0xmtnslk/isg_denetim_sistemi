[Unit]
Description=ISG Denetim Backend Service
After=network.target postgresql.service

[Service]
Type=simple
User=root
WorkingDirectory=/home/ubuntu/isg_denetim_sistemi/backend
Environment="NODE_ENV=production"
ExecStart=/usr/bin/node /home/ubuntu/isg_denetim_sistemi/backend/dist/main.js
Restart=on-failure
RestartSec=10
StandardOutput=append:/var/log/isg-backend.log
StandardError=append:/var/log/isg-backend-error.log

[Install]
WantedBy=multi-user.target
